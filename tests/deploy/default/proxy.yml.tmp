apiVersion: apps/v1
kind: Deployment
metadata:
  name: nginx
  namespace: default
spec:
  selector:
    matchLabels:
      app: nginx
  replicas: 1
  template:
    metadata:
      labels:
        app: nginx
    spec:
      containers:
      - name: nginx
        env:
          - name: BROKER_URL
            value: http://broker-ingress.knative-eventing.svc.cluster.local/default/video-coding-broker
        image: routerdi1315.uv.es:33443/video-coding/proxy-encoder:1.3.6
        command: ["sh","/scripts/entrypoint.sh"]
        ports:
        - containerPort: 80
        - containerPort: 1935
---
kind: Service
apiVersion: v1
metadata:
  name: nginx-service
  namespace: default
spec:
  type: NodePort
  selector: 
    app: nginx
  ports:
    - protocol: TCP
      port: 80
      targetPort: 80
      nodePort: 30080
      name: http
    - protocol: TCP
      port: 1935
      targetPort: 1935
      nodePort: 31935
      name: rtmp
